                            <DataGridTemplateColumn.Header>
                                <DockPanel>
                                    <Path VerticalAlignment="Center" Width="8" Height="6" Margin="4,0,2,0" Stretch="Fill" Opacity="0.5" 
                                          Fill="White" RenderTransformOrigin="0.5,0.4" Data="M0,0 L1,0 0.5,1 z" DockPanel.Dock="Right">
                                        <Path.Style>
                                            <Style TargetType="{x:Type Path}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=UserControl,Mode=FindAncestor},Path=DataContext.SortColName}" Value="PatientName">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=UserControl,Mode=FindAncestor},Path=DataContext.SortColOrder}" Value="Ascending">
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <RotateTransform Angle="180"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                    <TextBlock Text="{x:Static localisation:Resources.DataGridHeaderCol_Name_resx}" HorizontalAlignment="Left"/>
                                </DockPanel>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Margin="7,0,0,0">
                                        <Run Text="{Binding PatientName , Converter={StaticResource AnonymizeStringConverter}}" FontSize="14" FontWeight="Bold" Foreground="{DynamicResource BrownBrush2}"/><LineBreak />
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

