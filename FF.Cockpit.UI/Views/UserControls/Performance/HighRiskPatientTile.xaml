                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="0 0 0 2">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="{DynamicResource LightBlackBrush}"/>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding SessionsCount}" TextAlignment="Center" FontWeight="Medium" Margin="0 0 0 3" FontSize="20">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{DynamicResource LightGrayBrush2}"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn SortMemberPath="AvgSessionDuration" MaxWidth="150">
                            <DataGridTemplateColumn.Header>
                                <DockPanel>
                                    <Path VerticalAlignment="Center" Width="8" Height="6" Margin="4,0,2,0" Stretch="Fill" Opacity="0.5" 
