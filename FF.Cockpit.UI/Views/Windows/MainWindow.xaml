                        </DockPanel>
                        <Grid  Grid.Row="2" Cursor="Hand" Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="65*"/>
                                <RowDefinition Height="25*"/>
                            </Grid.RowDefinitions>

                            <Grid Background="{DynamicResource LightBlackBrush}" >
