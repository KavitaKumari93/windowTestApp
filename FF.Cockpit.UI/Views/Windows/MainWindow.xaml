                                        <i:Interaction.Triggers>
                                           <i:EventTrigger EventName="PreviewMouseDown">
                                           <i:InvokeCommandAction Command="{Binding ContactCommand}"/>
                                           </i:EventTrigger>
                                           </i:Interaction.Triggers>
                                    </TextBlock>
                                </Border>
